import java.util.Scanner;

public class Aluno {
    private String nome;
    private String curso;
    private double notaFinal;

    public Aluno(String nome, String curso, double notaFinal) {
        this.nome = nome;
        this.curso = curso;
        this.notaFinal = notaFinal;
    }

    public Aluno() {
        this.nome = "Sem nome";
        this.curso = "NÃ£o definido";
        this.notaFinal = 0.0;
    }

    public String status() {
        return (notaFinal >= 6) ? "Aprovado" : "Reprovado";
    }

    public void exibirInfo() {
        System.out.println("Nome: " + nome);
        System.out.println("Curso: " + curso);
        System.out.println("Nota Final: " + notaFinal);
        System.out.println("Status: " + status());
        System.out.println("---------------------");
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        Aluno[] alunos = new Aluno[3];

        for (int i = 0; i < 3; i++) {
            System.out.println("Digite os dados do aluno " + (i + 1) + ":");
            System.out.print("Nome: ");
            String nome = sc.nextLine();

            System.out.print("Curso: ");
            String curso = sc.nextLine();

            System.out.print("Nota final: ");
            double notaFinal = sc.nextDouble();
            sc.nextLine(); // consumir quebra de linha

            alunos[i] = new Aluno(nome, curso, notaFinal);
            System.out.println();
        }

        System.out.println("===== Resultados =====");
        for (Aluno aluno : alunos) {
            aluno.exibirInfo();
        }

        sc.close();
    }
}
